<!DOCTYPE html>
<html lang="en-GB">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
@if(Document.ContainsKey(WebKeys.Description)) {
    <meta name="description" content="@Document.GetString(WebKeys.Description)">
}

    <link rel="apple-touch-icon" sizes="180x180" href="../../assets/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="../../assets/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="../../assets/images/favicon-16x16.png">
    <link rel="shortcut icon" href="../../assets/images/favicon.ico" />
    <link rel="manifest" href="../../site.webmanifest">
    <link rel="mask-icon" href="../../assets/images/safari-pinned-tab.svg" color="#749ee7">
    <meta name="msapplication-config" content="../../browserconfig.xml" />
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">

    <link href="../../assets/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="../../assets/css/styles.css" rel="stylesheet" />

    <title>@(!string.IsNullOrEmpty(Document.GetTitle()) ? $"{Document.GetTitle()} - " : string.Empty)Develop Momentum</title>
</head>
<body class="d-flex flex-column">
    <div class="flex-grow-1 d-flex flex-column">
        <header class="container shadow-below">
            <div class="logo">
                <a href="../../index.html" class="logo-icon"><img alt="Develop Momentum" src="../../assets/images/logo.svg" /></a>
                <span>Develop Momentum</span>
            </div>
            @if(IsSectionDefined("navbar")) {
                @RenderSection("navbar")
            } else {
                <nav>
                    <ol>
                        <li><a href="1.html">Latest</a></li>
                    </ol>
                </nav>
            }
            <label id="dark-mode-switch" class="push-end" aria-hidden="true">
                <input type="checkbox" tabindex="-1">
                <span class="slider round"></span>
            </label>
        </header>
        <div class="container py-3">
            @RenderBody()
        </div>
    </div>
    <footer class="py-3 font-size-sm shadow-above">
        <div class="container d-flex">
            <span class="flex-grow-1">© @DateTime.Today.Year Adam Shirt</span>
            <ul class="m-n2 d-flex list-unstyled social">
                <li class="m-2">
                    <a href="https://twitter.com/adamshirt_" aria-label="Twitter" target="_blank" rel="noopener">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="feather feather-twitter"
                            fill="none" stroke="currentColor"
                            stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            viewBox="0 0 24 24">
                            <path d="M 23 3 a 10.9 10.9 0 0 1 -3.14 1.53 a 4.48 4.48 0 0 0 -7.86 3 v 1 A 10.66 10.66 0 0 1 3 4 s -4 9 5 13 a 11.64 11.64 0 0 1 -7 2 c 9 5 20 0 20 -11.5 a 4.5 4.5 0 0 0 -0.08 -0.83 A 7.72 7.72 0 0 0 23 3 Z" />
                        </svg>
                    </a>
                </li>
                <li class="m-2">
                    <a href="https://twitch.tv/developmomentum" aria-label="Twitch" target="_blank" rel="noopener">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="feather feather-twitch"
                            fill="none" stroke="currentColor"
                            stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            viewBox="0 0 24 24">
                            <path d="M21 2H3v16h5v4l4-4h5l4-4V2zm-10 9V7m5 4V7"/>
                        </svg>
                    </a>
                </li>
                <li class="m-2">
                    <a href="../../feed.atom" aria-label="Atom feed" target="_blank">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="feather feather-rss"
                            fill="none" stroke="currentColor"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            viewBox="0 0 24 24">
                            <path d="M4 11a9 9 0 0 1 9 9"/>
                            <path d="M4 4a16 16 0 0 1 16 16"/>
                            <circle cx="5" cy="19" r="1"/>
                        </svg>
                    </a>
                </li>
                <li class="m-2">
                    <a href="mailto:adam.shirt@developmomentum.com" aria-label="Email me">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="feather feather-mail"
                            fill="none" stroke="currentColor"
                            stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            viewBox="0 0 24 24">
                            <path d="M 4 4 h 16 c 1.1 0 2 0.9 2 2 v 12 c 0 1.1 -0.9 2 -2 2 H 4 c -1.1 0 -2 -0.9 -2 -2 V 6 c 0 -1.1 0.9 -2 2 -2 Z" />
                            <polyline points="22,6 12,13 2,6" />
                        </svg>
                    </a>
                </li>
            </ul>
        </div>
    </footer>
    <script src="../../assets/js/themes.js"></script>
    <script>
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('../../sw.js');
        }
    </script>
</body>
</html>